            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="4"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <wuc:SettingsCard ActionIcon="{wuc:FontIcon Glyph=&#xE8A7;}"
                                   Width="290"
                                   ActionIconToolTip="Open in new window"
                                   Description="V1.0.0 - Released"
                                   Header="Nexos Creator"
                                   HeaderIcon="{wuc:FontIcon Glyph=&#xE774;}"
                                   IsClickEnabled="True"
                                   IsEnabled="True" />
            <wuc:SettingsCard ActionIcon="{wuc:FontIcon Glyph=&#xE8A7;}"
                                   Width="290"
                                   ActionIconToolTip="Open in new window"
                                   Description="V0.3.0 - Devlopment"
                                   Header="Nexos Lib"
                                   HeaderIcon="{wuc:FontIcon Glyph=&#xE774;}"
                                   IsClickEnabled="True"
                                   IsEnabled="True" />
            <wuc:SettingsCard ActionIcon="{wuc:FontIcon Glyph=&#xE8A7;}"
                                   Width="290"
                                   ActionIconToolTip="Open in new window"
                                   Description="V0.0.0 - Upcoming"
                                   Header="Nexos Toolkit"
                                   HeaderIcon="{wuc:FontIcon Glyph=&#xE774;}"
                                   IsClickEnabled="True"
                                   IsEnabled="True" />
            <wuc:SettingsCard ActionIcon="{wuc:FontIcon Glyph=&#xE8A7;}"
                                   Width="290"
                                   ActionIconToolTip="Open in new window"
                                   Description="V0.7.3 - Devlopment"
                                   Header="Nexos Craft"
                                   HeaderIcon="{wuc:FontIcon Glyph=&#xE774;}"
                                   IsClickEnabled="True"
                                   IsEnabled="True" />
            <wuc:SettingsCard ActionIcon="{wuc:FontIcon Glyph=&#xE8A7;}"
                                   Width="290"
                                   ActionIconToolTip="Open in new window"
                                   Description="V0.0.0 - Devlopment"
                                   Header="Nexos Ai Chatbot"
                                   HeaderIcon="{wuc:FontIcon Glyph=&#xE774;}"
                                   IsClickEnabled="True"
                                   IsEnabled="True" />
            <wuc:SettingsCard ActionIcon="{wuc:FontIcon Glyph=&#xE8A7;}"
                                   Width="290"
                                   ActionIconToolTip="Open in new window"
                                   Description="V0.0.0 - Upcoming"
                                   Header="Nexos ......"
                                   HeaderIcon="{wuc:FontIcon Glyph=&#xE774;}"
                                   IsClickEnabled="True"/>
            <wuc:SettingsCard ActionIcon="{wuc:FontIcon Glyph=&#xE8A7;}"
                                   Width="290"
                                   ActionIconToolTip="Open in new window"
                                   Description="V1.0.0 - Upcoming"
                                   Header="Coming Soon...."
                                   HeaderIcon="{wuc:FontIcon Glyph=&#xE774;}"
                                   IsClickEnabled="True"/>
            <wuc:SettingsCard ActionIcon="{wuc:FontIcon Glyph=&#xE8A7;}"
                                   Width="290"
                                   ActionIconToolTip="Open in new window"
                                   Description="V1.0.0 - Upcoming"
                                   Header="Coming Soon...."
                                   HeaderIcon="{wuc:FontIcon Glyph=&#xE774;}"
                                   IsClickEnabled="True"/>
            <wuc:SettingsCard ActionIcon="{wuc:FontIcon Glyph=&#xE8A7;}"
                                   Width="290"
                                   ActionIconToolTip="Open in new window"
                                   Description="V1.0.0 - Upcoming"
                                   Header="Coming Soon...."
                                   HeaderIcon="{wuc:FontIcon Glyph=&#xE774;}"
                                   IsClickEnabled="True"/>
        </GridView>
        </StackPanel>
    </ScrollView>
</Page>
